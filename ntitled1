public class untitled1 {
    public static void main(String[] args){
        System.out.println("欢迎学习 java!");
        int number1 =100;
        int number2 =200;
        int sum = number1 + number2;
        System.out.println("数字" + number1 +"和"+ number2 +"的和是：" + sum);
        if (sum > 99) {
            System.out.println("和大于 99");
        } else {
            System.out.println("和小于或等于 99");
        }
    }
}
